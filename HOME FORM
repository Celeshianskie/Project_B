        TourForm.Type2.Text = "Parasailing"
        TourForm.Type3.Text = "Snorkeling"
        TourForm.Type4.Hide()
        TourForm.Hour1.Text = "2 Hours"
        TourForm.Hour2.Text = "2 Hours"
        TourForm.Hour3.Text = "2 Hours"
        TourForm.Hour4.Hide()
        TourForm.Cost1.Text = "$39"
        TourForm.Cost2.Text = "$119"
        TourForm.Cost3.Text = "$59"
        TourForm.Cost4.Hide()
        Me.Hide()
        TourForm.Show()
    End Sub

