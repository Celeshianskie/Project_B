Public Class HomeForm
    Private Sub ExitToolStripMenuItem_Click(sender As Object, e As EventArgs) Handles ExitToolStripMenuItem.Click
        Me.Hide()
        Form1.Show()
        Form1.TbPass.Text = ""
        Form1.TbUser.Text = ""
    End Sub

    Private Sub HawaiiToolStripMenuItem_Click(sender As Object, e As EventArgs) Handles HawaiiToolStripMenuItem.Click

        TourForm.LblTitle.Text = "Hawaii"
        TourForm.Type1.Text = "Deep Sea Fishing"
        TourForm.Type2.Text = "Kayaking"
        TourForm.Type3.Text = "Scuba"
        TourForm.Type4.Text = "Snorkeling"
        TourForm.Hour1.Text = "8 Hours"
        TourForm.Hour2.Text = "2 Hours"
        TourForm.Hour3.Text = "3 Hours"
        TourForm.Hour4.Text = "4 Hours"
        TourForm.Cost1.Text = "$199"
        TourForm.Cost2.Text = "$89"
        TourForm.Cost3.Text = "$119"
        TourForm.Cost4.Text = "$89"
        Me.Hide()
        TourForm.Show()
    End Sub

    Private Sub JamaicaToolStripMenuItem_Click(sender As Object, e As EventArgs) Handles JamaicaToolStripMenuItem.Click

        TourForm.LblTitle.Text = "Jamaica"
